public class PrinterApp {
    public static void main(String[] args) {
  
        System.out.println("Printer App");

        // Step 3
        System.out.println("This app is made by:");

        // Step 4
        String creator = "Your Name"; // Replace "Your Name" with your actual name

        // Step 5
        System.out.print("This app is made by: " + creator);

        // Step 6
        int number1 = 5;
        int number2 = 2;

        // Step 7 (commented)
        // System.out.println(number1);

        // Step 8
        System.out.println("\nThe value of number1 is " + number1);

        // Step 9
        System.out.println("The value of number2 is " + number2);

        // Step 10-12
        int multiplication = number1 * number2;
        double division = (double) number1 / number2; // Cast to double for accurate division
        int addition = number1 + number2;
        int subtraction = number1 - number2;

        // Step 13
        System.out.println(number1 + " * " + number2 + " = " + multiplication);
        System.out.println(number1 + " / " + number2 + " = " + division);
        System.out.println(number1 + " + " + number2 + " = " + addition);
        System.out.println(number1 + " - " + number2 + " = " + subtraction);

        // Step 14
        // Variable declarations moved to the top
    }
}
